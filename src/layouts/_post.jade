extends _main

block content
	article
		header
			h1= post.meta.title
			time(datetime=post.meta.date.toISOString())= post.meta.date.format('ll')
			a(rel="author")= post.meta.author

		section.content
			!= post.getContent()

		section.comments
			include ../includes/_disqus

block footer
	ul.nav
		- var prev = post.prev ? post.prev.urlpath : undefined;
		- var next = post.next ? post.next.urlpath : undefined;
		li: a(href=prev, disabled=(prev===undefined?"disabled":undefined)) &lt;
		li: a(href="/blog/archives") Archives
		li: a(href=next, disabled=(next===undefined?"disabled":undefined)) &gt;

